#!/bin/bash

# https://forestry.io/blog/search-with-algolia-in-hugo/

# generate json
hugo

if [ "${ES_URL}x" == "x" ]; then
  echo "sourceing"
  source .env
  echo ''
fi

# push to elasticsearch
curl -H "Content-Type: application/x-ndjson" -XPOST "${ES_URL}/posts/_bulk?pretty" --data-binary @public/bonsai.json