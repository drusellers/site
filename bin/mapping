#!/bin/bash

set -e

ES_URL=localhost:9200
curl -XPUT -H "Content-Type: application/json" $ES_URL/hugo -d '{
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0
    }
  },
  "mappings": {
    "doc": {
      "properties": {
        "title": {
          "type": "text"
        },
        "description": {
          "type": "text"
        },
        "summary": {
          "type": "text"
        },
        "fuzzywordcount": {
          "type": "integer"
        },
        "wordcount": {
          "type": "integer"
        },
        "readingtime": {
          "type": "integer"
        },
        "keywords": {
          "type": "text"
        },
        "kind": {
          "type": "keyword"
        },
        "section": {
          "type": "keyword"
        },
        "type": {
          "type": "keyword"
        },
        "permalink": {
          "type": "keyword"
        },
        "relpermalink": {
          "type": "keyword"
        },
        "url": {
          "type": "keyword"
        },
        "tags": {
          "type": "keyword"
        },
        "categories": {
          "type": "keyword"
        },
        "date": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "publishdate": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        }
      }
    }
  }
}'